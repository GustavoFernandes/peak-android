<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/view_bg">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="gus"
                android:id="@+id/et_username"
                android:layout_centerHorizontal="true" android:layout_below="@+id/iv_peak"/>
        <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="password"
                android:id="@+id/et_password" android:layout_alignLeft="@+id/et_username" android:layout_below="@+id/et_username"
                android:layout_alignRight="@+id/et_username" android:password="true"/>
        <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:id="@+id/btn_login" android:layout_alignLeft="@+id/et_username" android:layout_below="@+id/et_password"
                android:layout_alignRight="@+id/et_username" android:onClick="loginBtnOnClick"
                android:singleLine="true"/>
    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/iv_peak"
            android:src="@drawable/peak"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/iv_wvu" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:src="@drawable/wvu" android:layout_marginBottom="25dp"/>
</RelativeLayout>