            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button1" android:layout_gravity="left|center_vertical" android:clickable="false"
            android:focusable="false" android:focusableInTouchMode="false"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button2" android:layout_gravity="left|center_vertical" android:clickable="false"
            android:focusable="false" android:focusableInTouchMode="false"/>
